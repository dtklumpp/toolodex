<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/scripts/app.js" defer></script>
    <%- include('partials/external-imports.ejs') %>
    <link rel="stylesheet" href="/styles/main.css" />
    <title>Explore Your Category</title>
</head>
<body>
    <%- include('../partials/header-navbar.ejs') %>
    <h2><%= category.name %> Tools:</h2>
    <div class='edit-category'>
        <a href="/categories/<%= category._id %>/edit">Edit Category</a>
        <!-- <i class="fas fa-edit"></i> USE THIS TO REPLACE EDIT CATEGORY TEXT ABOVE -->    
    </div>
    <section class='tools-menu'>
        <% category.tools.forEach(tool => { %>
            <div class='tool tile'>
                <a href='<%= tool.link %>' target='_blank'><%= tool.name %></a>
            </div>
        <% }); %>
        <% if(category.tools.length === 0) { %>
            <p>There are no tools available yet!</p>
        <% } %>
        <div class="add-tool tile">
            <a href="/tools/newTool">+</a>
        </div>
    </section>  
</body>
</html>