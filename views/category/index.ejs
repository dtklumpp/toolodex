<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <script src="/scripts/app.js" defer></script>
    <link rel="stylesheet" href="/styles/main.css" />
    <%- include('../partials/external-imports.ejs') %>
    <title>Toolodex</title>
</head>
<body>
    <div class='display-area'>
        <%- include('../partials/header-navbar.ejs') %>
        <section class='corkboard'>
            <% if(user) { %>
                <h2><%= user.username %>'s Categories</h2>
                <div class='post-its'>
                    <% user.categories.forEach(category => { %>
                        <a href="/categories/<%= category._id %>" class='category-name'>
                            <div class="category tile">
                                <%= category.name %>
                            </div>
                        </a>
                    <% }); %>
                    <a href="/categories/new">
                        <div class="add-category tile">
                            <i class="fas fa-plus"></i>
                        </div>
                    </a>
            <% } else { %>
                No one is signed in.
            <% } %> 
        </section>
    </div>

</body>
</html>
