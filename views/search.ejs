<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <script src="/scripts/app.js" defer></script>
    <link rel="stylesheet" href="/styles/main.css" />
    <%- include('partials/external-imports.ejs') %>
    <title>Toolodex</title>
</head>
<body>
    <div class='display-area'>
        <%- include('partials/header-navbar.ejs') %>
        <section class='corkboard'>
            <div class="postit-image">
                <h2>Search Results</h2>
            </div>
            <h3>Categories:</h3>
            <ul class='list'>
                <% categoryMatches.forEach(category => { %>
                    <a href="/categories/<%= category._id %>" class='category-name'>
                        <li title='<%= category.description %>'>
                            <%= category.name %>
                        </li>
                    </a>
                <% }); %>
            </ul>
            <p>Brought to you by <span id='dalton'>Dalton Hart</span>.</p>
        </section>
    </div>
</body>
</html>
