<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='UTF-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <script src="/scripts/app.js" defer></script>
    <link rel="stylesheet" href="/styles/main.css" />
    <%- include('partials/external-imports.ejs') %>
    <title>Toolodex</title>
</head>
<body>
    <div class='display-area'>
        <%- include('partials/header-navbar.ejs') %>
        <section class='corkboard'>
            <h2>Search Results</h2>
            <h3>Categories:</h3>
            <ul class='list'>
                <% categoryMatches.forEach(category => { %>
                    <a href="/categories/<%= category._id %>" class='category-name'>
                        <li title='<%= category.description %>'>
                            <%= category.name %>
                        </li>
                    </a>
                <% }); %>

                <% console.log("user.categories: ", user.categories) %>
                <% console.log("user.categories.tools: ", user.categories.tools) %>
            </ul>

            <h3>Tools:</h3>
                <ul class='list'>
                    <% toolMatches.forEach(tool => { %>
                        <a href="/tools/<%= tool._id %>" class='tool-name'>
                            <li title='<%= tool.description %>'>
                                <%= tool.name %>
                            </li>
                        </a>
                    <% }); %>
                </ul>
        </section>
    </div>
</body>
</html>
